<section class="new-object-form">
  <%= form_with model: product do |form| %>
    <div class="mb-3">
      <%= form.label :image, class: "form-label" %>
      <%= form.file_field :image, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label "Choose restaurant", class: "form-label" %><br>
      <div class="delivery-locations">
        <%= form.select(:restaurant_id, Restaurant.all.collect{|c| [titleize_string(c.name), c.id]}, {include_blank: false}, class: "form-control custom-select") %>
      </div>
    </div>

    <div class="mb-3">
      <%= form.label :price, class: "form-label" %>
      <%= form.number_field :price, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.submit "Create new product", class: "btn btn-primary" %>
    </div>
  <% end %>
</section>